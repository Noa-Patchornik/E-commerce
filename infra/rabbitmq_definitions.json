{
  "exchanges": [
    {
      "name": "order.exchange",
      "type": "topic",
      "durable": true
    },
    {
      "name": "payment.exchange",
      "type": "topic",
      "durable": true
    }
  ],
  "queues": [
    {
      "name": "payment.order.created.queue",
      "durable": true,
      "arguments": {
        "x-dead-letter-exchange": "dlq.exchange"
      }
    },
    {
      "name": "inventory.payment.succeeded.queue",
      "durable": true
    }

  ],
  "bindings": [
    {
      "source": "order.exchange",
      "destination": "payment.order.created.queue",
      "destination_type": "queue",
      "routing_key": "order.created"
    },
    {
      "source": "payment.exchange",
      "destination": "inventory.payment.succeeded.queue",
      "destination_type": "queue",
      "routing_key": "payment.succeeded"
    }
  ]
}